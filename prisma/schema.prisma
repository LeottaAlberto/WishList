model User {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  email      String     @unique
  username   String
  password   String
  dateBirth  DateTime
  gender     String
  categories Category[]
  gifts      Gift[]
}

model Category {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
  name   String
  gift   Gift[]
}

model Gift {
  id String   @id @default(auto()) @map("_id") @db.ObjectId
  name String
  user User     @relation(fields: [userId], references: [id])
  userId String   @db.ObjectId
  category Category @relation(fields: [categoryId], references: [id])
  categoryId String   @db.ObjectId
  priority String
  description String
}
